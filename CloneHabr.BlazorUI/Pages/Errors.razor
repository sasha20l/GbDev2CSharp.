<div style="@(( !string.IsNullOrEmpty(ErrorText)) ? "display:block" : "display:none")">
    
    <font color="red" >
        <ul>
            <li>
                @ErrorText

            </li>
        </ul>
    </font>
</div>

@code {
    [Parameter]
    public string ErrorText { get; set; } = string.Empty;
}
